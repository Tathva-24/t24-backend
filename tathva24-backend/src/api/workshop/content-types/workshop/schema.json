{
  "kind": "collectionType",
  "collectionName": "workshops",
  "info": {
    "singularName": "workshop",
    "pluralName": "workshops",
    "displayName": "Workshop",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "richtext"
    },
    "coverImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "regStartDate": {
      "type": "datetime"
    },
    "regEndDate": {
      "type": "datetime"
    },
    "regPrice": {
      "type": "decimal"
    },
    "maxRegCount": {
      "type": "integer"
    },
    "currRegCount": {
      "type": "integer",
      "default": 0
    },
    "contacts": {
      "type": "component",
      "repeatable": true,
      "component": "contacts.contacts"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "announcements": {
      "type": "richtext"
    },
    "posterImage": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "Web development",
        "Product development",
        "Robotics",
        "Web 3.0",
        "Digital designing",
        "Miscellaneous"
      ]
    },
    "venue": {
      "type": "string"
    },
    "regClosed": {
      "type": "boolean"
    },
    "sponsorLogo": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "timing": {
      "type": "richtext"
    },
    "regLink": {
      "type": "string",
      "required": true
    },
    "eventDate": {
      "type": "date"
    },
    "eventTime": {
      "type": "string"
    }
  }
}
